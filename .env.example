# ===== AWS CREDENTIALS =====
# IMPORTANT: Rotate these keys immediately if exposed!
# Get from: AWS Console → IAM → Users → Security Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-2

# ===== TWITTER/X API =====
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# ===== NEWS API =====
# Get from: https://newsapi.org/register
NEWS_API_KEY=your_newsapi_key_here

# ===== DOCKER HUB =====
# Get from: https://hub.docker.com/ → Account Settings → Security
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_access_token

# ===== DATABASE =====
POSTGRES_USER=smaart_user
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=smaart_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ===== REDIS =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password

# ===== API CONFIGURATION =====
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2
API_RELOAD=false

# CORS Origins (comma-separated)
CORS_ORIGINS=https://smaart-intelligence.vercel.app,http://localhost:3000

# ===== CELERY =====
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_WORKERS=2

# ===== ML MODELS =====
SUMMARIZATION_MODEL=sshleifer/distilbart-cnn-12-6
SPAM_MODEL_PATH=models/spam_classifier.pkl
NER_MODEL=en_core_web_sm

# ===== DATA COLLECTION =====
# Twitter collection settings
TWITTER_COLLECT_INTERVAL=15  # minutes
TWITTER_POSTS_PER_RUN=50
TWITTER_TOPICS=AI,technology,news,politics,science

# News collection settings
NEWS_COLLECT_INTERVAL=30  # minutes
NEWS_ARTICLES_PER_RUN=20
NEWS_SOURCES=reuters,bbc-news,cnn,techcrunch,the-verge

# ===== MONITORING =====
GRAFANA_ADMIN_PASSWORD=change_this_grafana_password
PROMETHEUS_RETENTION=7d

# ===== OPTIONAL: DOMAIN =====
# Leave empty to use EC2 public IP
DOMAIN_NAME=

# ===== ENVIRONMENT =====
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
